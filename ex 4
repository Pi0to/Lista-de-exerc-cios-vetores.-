#include <string.h>
#include <stdio.h>
#define t 200

int main() {
    
    int i, p=1, tam;
    char s[t];
    
    printf("Digite uma ou mais frase(s) com no maximo 200 caracteres: ");
    fgets(s, t, stdin);
    fflush(stdin);

    //pega o tamanho da string
    tam = strlen(s);

    //verifica se tem espa√ßo, se for o caso adiciona +1 a variavel p que armazena aquantidade de palavras
    for(i=0;i<tam;i++) if(s[i] == ' ') p++;
    
    printf("A(s) frase(s) possuem %d palavras.", p);
    
    return 0;
}
