
#include <stdio.h>
#include <string.h>
#define t 200

int main() {
    
    int i, tam, cont;
    char s[t], l;
    
    printf("Digite uma frase com no maximo 200 caracteres: ");
    fgets(s, t, stdin);
    
    printf("Digite um letra: ");
    scanf("%c", &l);
    
    tam = strlen(s);
    
    for(i=0;i<tam;i++) if (l == s[i]) cont ++;
    
    printf("Porcentagem da letra %c na frase: %.2f%%", l, ((float)cont/(tam-1)) * 100);
    
    return 0;
}
